@model Web.Mvc.Models.AdoptionViewModel
<h1>Adoptions</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>New Adoption</h4>
        <hr />
        @if (ViewBag.Adopters.Items.Count > 0 && ViewBag.Animals.Items.Count > 0)
        {

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("Adopters", (SelectList)ViewBag.Adopters, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.DropDownList("Animals", (SelectList)ViewBag.Animals, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="input-group">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
        }
        else
        {
            <p>No animals to adoption.</p>
        }</div>
}
<div>
    @Html.ActionLink("Voltar", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}