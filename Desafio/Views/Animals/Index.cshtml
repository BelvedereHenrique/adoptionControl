
@{
    ViewBag.Title = "Index";
}
@if (Request.IsAuthenticated)
{
    <h2>Animals</h2>
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading" style="padding:20px">
            <b>Animals List</b>
            <button type="button" class="btn btn-success btn-sm pull-right" data-toggle="modal" data-target="#addModal">Add new</button>
        </div>
        <!-- Table -->
        <table id="animals_table" class="table">
            <thead>
                <tr>

                    <th>
                        Name
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Weight
                    </th>
                    <th>
                        Age
                    </th>

                    <th>

                    </th>
                </tr>
            </thead>
            <tbody id="animals-table-tr"></tbody>
        </table>
    </div>

    <!-- Trigger the modal with a button -->

    <!-- Modal -->
    <div id="addModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Add new animal</h4>
                </div>
                <form class="needs-validation">

                    <div class="modal-body">
                        <div class="alert alert-danger" id="addFulfill" role="alert" style="display:none;">Please, fulfill all required fields.</div>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Name</span>
                            <input type="text" class="form-control" placeholder="Name" aria-describedby="basic-addon1" id="newName">&nbsp;<b style="color:darkred;">*</b>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Type</span>
                            <input type="text" class="form-control" placeholder="Type" aria-describedby="basic-addon1" id="newType">&nbsp;<b style="color:darkred;">*</b>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Weight</span>
                            <input type="text" class="form-control" placeholder="Weight" aria-describedby="basic-addon1" id="newWeight">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Age</span>
                            <input type="text" class="form-control" placeholder="Age" aria-describedby="basic-addon1" id="newAge">
                        </div>
                        <div>
                            <span style="color:darkred;">Fields marked with <b>*</b> are required.</span>
                        </div>
                    </div>

                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="AddNew()">Add</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <!-- Modal Edit-->
    <div id="editModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Edit animal</h4>
                </div>
                <form class="needs-validation">

                    <div class="modal-body">
                        <div class="alert alert-danger" id="editFulfill" role="alert" style="display:none;">Please, fulfill all required fields.</div>
                        <div class="input-group">
                            <b style="color:darkred;">*</b><span class="input-group-addon" id="basic-addon1">Name</span>
                            <input type="text" class="form-control" placeholder="Name" aria-describedby="basic-addon1" id="editName">
                        </div>
                        <div class="input-group">
                            <b style="color:darkred;">*</b><span class="input-group-addon" id="basic-addon1">Type</span>
                            <input type="text" class="form-control" placeholder="Email" aria-describedby="basic-addon1" id="editType">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Weight</span>
                            <input type="text" class="form-control" placeholder="Address" aria-describedby="basic-addon1" id="editWeight">
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1">Age</span>
                            <input type="text" class="form-control" placeholder="State" aria-describedby="basic-addon1" id="editAge">
                        </div>

                        <div>
                            <span style="color:darkred;">Fields marked with <b>*</b> are required.</span>
                        </div>
                        <input type="hidden" id="hiddenID" />
                    </div>

                </form>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="Edit(this)">Edit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/Animals")

}
else
{
    <p>Please, authenticate</p>
}
